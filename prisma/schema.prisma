generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:/Users/randall/IdeaProjects/moments/data/db.sqlite"
}

model Comment {
  id        Int      @id @default(autoincrement())
  content   String?
  replyTo   String?
  username  String?
  email     String?
  website   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  memoId    Int
  memo      Memo?    @relation(fields: [memoId], references: [id], onDelete: Cascade)
  author    Int?
}

model Memo {
  id              Int       @id @default(autoincrement())
  content         String?
  imgs            String?
  favCount        Int       @default(0)
  commentCount    Int       @default(0)
  userId          Int
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  comments        Comment[]
  user            User?     @relation(fields: [userId], references: [id], onDelete: Cascade)
  music163Url     String?
  bilibiliUrl     String?
  location        String?
  externalUrl     String?
  externalTitle   String?
  externalFavicon String    @default("/favicon.png")
  pinned          Boolean   @default(false)
  atpeople        String?
}

model User {
  id              Int      @id @default(autoincrement())
  username        String   @unique(map: "sqlite_autoindex_users_2")
  nickname        String?
  password        String
  avatarUrl       String?
  slogan          String?
  coverUrl        String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  memos           Memo[]
  enableS3        Boolean  @default(false)
  domain          String?
  bucket          String?
  region          String?
  accessKey       String?
  secretKey       String?
  endpoint        String?
  thumbnailSuffix String?
  favicon         String?
  title           String   @default("Randall的小屋")
  css             String?
  js              String?
  beianNo         String?
  eMail           String?
  code            String?
}

model Config {
    id              Int      @id @default(autoincrement())
    enableS3        Boolean  @default(false)
    s3Domain        String?
    s3Bucket        String?
    s3Region        String?
    s3AccessKey     String?
    s3SecretKey     String?
    s3Endpoint      String?
    s3ThumbnailSuffix String?
    favicon         String?
    title           String   @default("Randall的小屋")
    css             String?
    js              String?
    beianNo         String?
    siteUrl         String?
    enableRecaptcha  Boolean  @default(false)
    recaptchaSiteKey String?
    recaptchaSecretKey   String?
    enableTencentMap    Boolean @default(false)
    tencentMapKey    String?
    enableAliyunDective Boolean @default(false)
    aliyunAccessKeyId   String?
    aliyunAccessKeySecret   String?
    enableEmail    Boolean @default(false)
    mailHost    String?
    mailPort    Int @default(587)
    mailSecure  Boolean @default(false)
    mailUser    String?
    mailPass    String?
    mailFrom    String?
    mailName    String?
}